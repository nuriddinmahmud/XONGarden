generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// === Worker model ===
// Ishchilar haqida ma'lumotlar
model Worker {
  id           Int      @id @default(autoincrement()) // Unikal ID
  date         DateTime @default(now()) // Ma'lumot kiritilgan sana
  workerCount  Int // Ishchilar soni
  salaryPerOne Float // Har bir ishchining ish haqi
  totalSalary  Float // Umumiy ish haqi
}

// === Drainage model ===
// Drenaj ishlariga to‘langan ma’lumotlar
model Drainage {
  id          Int      @id @default(autoincrement()) // Unikal ID
  date        DateTime @default(now()) // Xizmat ko‘rsatilgan sana
  hoursWorked Float // Necha soat ishlagan
  totalSalary Float // Umumiy to‘lov summasi
}

// === Energy model ===
// Elektr yoki boshqa energiya uchun to‘lovlar
model Energy {
  id         Int      @id @default(autoincrement()) // Unikal ID
  date       DateTime // To‘lov sanasi
  amountPaid Float // To‘langan summa
  comment    String // Izoh (masalan, “elektr energiyasi uchun”)
}

// === Food model ===
// Oziq-ovqat xaridlari
model Food {
  id       Int      @id @default(autoincrement()) // Unikal ID
  date     DateTime @default(now()) // Xarid sanasi
  shopName String? // Qaysi do‘kondan olingani (ixtiyoriy)
  price    Float // Oziq-ovqat narxi
}

// === Tax model ===
// Turli soliq to‘lovlari
model Tax {
  id         Int      @id @default(autoincrement()) // Unikal ID
  date       DateTime // To‘lov sanasi
  amountPaid Float // To‘langan summa
  comment    String // Soliq turi haqida izoh
}

// === Transport model ===
// Transport bilan bog‘liq xizmatlar
model Transport {
  id            Int      @id @default(autoincrement()) // Unikal ID
  date          DateTime // Xizmat sanasi
  transportType String // Transport turi (masalan, yuk mashinasi)
  comment       String // Izoh (qaerga bordi, nima uchun)
}

// === Repair model ===
// Ta’mirlash ishlari uchun xarajatlar
model Repair {
  id      Int      @id @default(autoincrement()) // Unikal ID
  date    DateTime // Ta’mir kuni
  price   Float // Ta’mir uchun to‘langan summa
  comment String // Ta’mir haqida izoh (masalan, “traktor g‘ildiragi”)
}

// === Oil model ===
// Yoqilg‘i xaridlari
model Oil {
  id      Int      @id @default(autoincrement()) // Unikal ID
  date    DateTime // Xarid sanasi
  price   Float // Yoqilg‘i narxi
  comment String // Izoh (qaysi texnikaga ishlatilgan)
}

// === Fertilizer model ===
// Mineral va mahalliy o‘g‘itlar
model Fertilizer {
  id   Int      @id @default(autoincrement()) // Unikal ID
  date DateTime // Xarid sanasi
  type String // 'mineral' yoki 'local'

  machineCount Int? // Mahalliy o‘g‘it uchun mashina soni
  tonAmount    Float? // Mineral o‘g‘it uchun tonna miqdori

